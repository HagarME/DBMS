@page "{docId:int}"
@model dashProject.Pages.DocumentDetailsModel
@{
    ViewData["Title"] = "Document Details";
}

<div style="background:#fff; padding:30px; border-radius:12px; box-shadow:0 4px 15px rgba(0,0,0,0.1); max-width: 800px; margin: 0 auto;">
    <h3 style="color: #ffc107; margin-top:0; margin-bottom: 25px; font-size: 28px; border-bottom: 2px solid #f0f0f0; padding-bottom: 15px;">Document Details</h3>

    <div style="display:grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 30px;">
        <div style="grid-column: span 2;">
            <label style="color:#888; font-size:12px; font-weight:700; text-transform:uppercase;">Title</label>
            <p style="font-size:20px; font-weight:600; margin:5px 0;">@Model.Title</p>
        </div>

        <div>
            <label style="color:#888; font-size:12px; font-weight:700; text-transform:uppercase;">Department</label>
            <p style="margin:5px 0;"><span style="background:#e9f7fe; color:#3182ce; padding:4px 10px; border-radius:4px; font-size:14px; font-weight:600;">@Model.DeptName</span></p>
        </div>

        <div>
            <label style="color:#888; font-size:12px; font-weight:700; text-transform:uppercase;">Submitted By</label>
            <p style="margin:5px 0; font-weight:500;">@Model.EmpName</p>
        </div>

        <div>
            <label style="color:#888; font-size:12px; font-weight:700; text-transform:uppercase;">Submission Date</label>
            <p style="margin:5px 0; color:#555;">@Model.SubmissionDate</p>
        </div>

        <div>
            <label style="color:#888; font-size:12px; font-weight:700; text-transform:uppercase;">Attachment Status</label>
            <p style="margin:5px 0;">
                @if (Model.HasAttachment)
                {
                    <span style="color:#28a745; font-weight:600;"><i class="fas fa-paperclip"></i> Available</span>
                }
                else
                {
                    <span style="color:#dc3545; font-weight:600;"><i class="fas fa-times"></i> No Attachment</span>
                }
            </p>
        </div>
    </div>

    <div style="background:#f8fafc; padding:20px; border-radius:8px; border: 1px solid #e2e8f0; margin-bottom: 30px;">
        <label style="color:#888; font-size:12px; font-weight:700; text-transform:uppercase; display:block; margin-bottom:10px;">Content</label>
        <div style="white-space: pre-wrap; line-height: 1.6; color:#2d3748;">@Model.Content</div>
    </div>

    <div style="display:flex; justify-content: space-between; align-items: center;">
        <a asp-page="/Documents" style="text-decoration:none; color:#4a5568; font-weight:600; font-size:14px;">
            <i class="fas fa-arrow-left"></i> Back to Documents
        </a>

        @if (Model.HasAttachment)
        {
            <a href="?handler=Download&docId=@Model.DocId" target="_blank" style="background:#ffc107; color:#000; padding:12px 25px; border-radius:6px; text-decoration:none; font-weight:700; transition: all 0.2s; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
                <i class="fas fa-download"></i> Download Attachment
            </a>
        }
    </div>
</div>
