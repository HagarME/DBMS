@page
@model dashProject.Pages.DepartmentsModel
@{
    ViewData["Title"] = "Departments";
}

<!-- Search Department -->
<div class="section-box">
    <h4 class="section-title">Search Department</h4>
    <form method="get">
        <div style="display: flex; gap: 10px; align-items: center;">
            <input type="text" name="searchTerm" placeholder="Enter Department ID or Specialization" class="input-field" value="@Model.SearchTerm" />
            <button type="submit" class="primary-btn">
                <i class="fas fa-search"></i> Search
            </button>
            @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
            {
                <a asp-page="/Departments" class="btn-standard btn-grey">
                    <i class="fas fa-times"></i> Clear
                </a>
            }
        </div>
    </form>

    @if (!string.IsNullOrWhiteSpace(Model.SearchTerm))
    {
        @if (Model.SearchResult != null && Model.SearchResult.Rows.Count > 0)
        {
            <div style="margin-top: 20px; padding: 15px; background-color: #e8f5e9; border-radius: 4px; border-left: 4px solid #4caf50;">
                <h5 style="color: #2e7d32; margin-bottom: 10px;">Search Result:</h5>
                <table style="width: 100%; background: white; border-radius: 4px;">
                    <thead>
                        <tr>
                            <th>Dept_ID</th>
                            <th>Specialization</th>
                            <th>Description</th>
                            <th>Manager SSN</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (System.Data.DataRow dept in Model.SearchResult.Rows)
                        {
                            <tr>
                                <td>@dept["dept_id"]</td>
                                <td>@dept["specialization"]</td>
                                <td>@dept["description"]</td>
                                <td>@dept["mgr_ssn"]</td>
                                <td>
                                    <div class="table-actions">
                                        <a asp-page="/EditDepartment" asp-route-deptId="@dept["dept_id"]" class="action-btn">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <form method="post" asp-page-handler="Delete" asp-route-deptId="@dept["dept_id"]" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this department?');">
                                            <button type="submit" class="btn-standard btn-red">
                                                <i class="fas fa-trash"></i> Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div style="margin-top: 20px; padding: 15px; background-color: #fff3cd; border-radius: 4px; border-left: 4px solid #ffc107;">
                <p style="margin: 0; color: #856404;">No department found matching: <strong>@Model.SearchTerm</strong></p>
            </div>
        }
    }
</div>

<!-- Add New Department Button -->
<div style="margin-bottom: 25px;">
    <a asp-page="/AddDepartment" class="primary-btn" style="text-decoration: none; display: inline-block;">
        <i class="fas fa-plus"></i> Add New Department
    </a>
</div>

<!-- All Departments -->
<div class="section-box">
    <h4 class="section-title">All Departments</h4>
    <div class="table-container">
        <table>
            <thead>
                <tr>
                    <th>Dept_ID</th>
                    <th>Specialization</th>
                    <th>Description</th>
                    <th>Manager SSN</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Departments != null && Model.Departments.Rows.Count > 0)
                {
                    @foreach (System.Data.DataRow dept in Model.Departments.Rows)
                    {
                        <tr>
                            <td>@dept["dept_id"]</td>
                            <td>@dept["specialization"]</td>
                            <td>@dept["description"]</td>
                            <td>@dept["mgr_ssn"]</td>
                            <td>
                                <div class="table-actions">
                                    <a asp-page="/EditDepartment" asp-route-deptId="@dept["dept_id"]" class="action-btn">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-deptId="@dept["dept_id"]" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this department?');">
                                        <button type="submit" class="btn-standard btn-red">
                                            <i class="fas fa-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" style="text-align: center; color: #666;">No departments found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>