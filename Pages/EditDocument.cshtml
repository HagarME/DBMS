@page "{docId:int}"
@model dashProject.Pages.EditDocumentModel
@{
    ViewData["Title"] = "Edit Document";
}

<h3>Edit Document</h3>

<form method="post">
    <input type="hidden" asp-for="DocId" />

    <div>
        <label>Title</label>
        <input type="text" asp-for="Title" required />
    </div>

    <div>
        <label>Content</label>
        <textarea asp-for="Content"></textarea>
    </div>

    <div>
        <label>Owning Department</label>
        <select asp-for="DeptId" asp-items="Model.Departments"></select>
    </div>

    <div>
        <label>Submitting Employee</label>
        <select asp-for="EmpSsn" asp-items="Model.Employees"></select>
    </div>

    <div>
        <label>Submission Date</label>
        <input type="text" asp-for="SubmissionDate" readonly />
    </div>

    <button type="submit">Save</button>
</form>
