@page
@model dashProject.Pages.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #1f2738, #2c3243);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .signup-wrapper {
            width: 100%;
            max-width: 380px;
            padding: 20px;
        }

        .signup-title {
            text-align: center;
            font-size: 44px;
            font-weight: 800;
            color: #ffc107;
            margin-bottom: 30px;
            letter-spacing: 2px;
        }

        .signup-card {
            background: #1f2738;
            padding: 30px;
            border-radius: 14px;
            box-shadow: 0 12px 30px rgba(0,0,0,0.4);
        }

        .signup-input, .signup-select {
            width: 100%;
            padding: 12px;
            background: #2c3243;
            border: none;
            border-radius: 8px;
            margin-bottom: 16px;
            color: #fff;
            font-size: 15px;
        }

            .signup-input:focus, .signup-select:focus {
                outline: none;
                box-shadow: 0 0 0 2px rgba(255,193,7,0.4);
                background: #2c3243;
                color: #fff;
            }

        .signup-btn {
            width: 100%;
            padding: 12px;
            background: #ffc107;
            color: #000;
            font-weight: 700;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .signup-btn:hover {
                background: #ffcd39;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(255,193,7,0.3);
            }

        .signup-links {
            text-align: center;
            margin-top: 14px;
            font-size: 14px;
        }

            .signup-links a {
                color: #d1d9ff;
                text-decoration: none;
            }

                .signup-links a:hover {
                    text-decoration: underline;
                }

        .signin-link {
            text-align: center;
            margin-top: 18px;
            font-size: 15px;
            color: #ddd;
        }

            .signin-link a {
                color: #ffc107;
                font-weight: 700;
                text-decoration: none;
            }

        .error-message {
            color: #ff6b6b;
            margin-bottom: 12px;
            font-size: 14px;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="signup-wrapper">
        <div class="signup-title">DASH</div>

        <div class="signup-card">
            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="error-message">
                    @Model.Message
                </div>
            }

            <form method="post">
                <input asp-for="FullName"
                       type="text"
                       class="signup-input"
                       placeholder="Full Name" required />

                <input asp-for="Email"
                       type="email"
                       class="signup-input"
                       placeholder="Email" required />

                <input asp-for="Password"
                       type="password"
                       class="signup-input"
                       placeholder="Password" required />

                <input asp-for="ConfirmPassword"
                       type="password"
                       class="signup-input"
                       placeholder="Confirm Password" required />

                <select asp-for="Role" required class="signup-select">
                    <option value="" disabled selected hidden>Select Role</option>
                    <option>Admin</option>
                    <option>Manager</option>
                    <option>Employee</option>
                </select>

                <button type="submit" class="signup-btn">
                    <i class="fas fa-user-plus"></i> Sign Up
                </button>
            </form>

            <div class="signup-links">
                <a href="#">Forgot Password?</a>
            </div>
        </div>

        <div class="signin-link">
            Already have an account?
            <a href="/Login">Login</a>
        </div>
    </div>
</body>
</html>
