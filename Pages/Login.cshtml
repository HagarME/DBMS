@page
@model dashProject.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            background: linear-gradient(135deg, #1f2738, #2c3243);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-wrapper {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            max-width: 500px;
            padding: 40px 20px;
        }

        .login-title {
            text-align: center;
            margin-bottom: 50px;
        }

        .login-logo {
            max-width: 500px;
            height: auto;
            display: block;
            margin: 0 auto;
        }

        .login-card {
            background: #1f2738;
            padding: 30px;
            border-radius: 14px;
            box-shadow: 0 12px 30px rgba(0,0,0,0.4);
        }

        .login-input {
            width: 100%;
            padding: 12px;
            background: #2c3243;
            border: none;
            border-radius: 8px;
            margin-bottom: 16px;
            color: #fff;
            font-size: 15px;
        }

            .login-input:focus {
                outline: none;
                box-shadow: 0 0 0 2px rgba(255,193,7,0.4);
                background: #2c3243;
                color: #fff;
            }

        .login-btn {
            width: 100%;
            padding: 12px;
            background: #ffc107;
            color: #000;
            font-weight: 700;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .login-btn:hover {
                background: #ffcd39;
                transform: translateY(-2px);
                box-shadow: 0 6px 12px rgba(255,193,7,0.3);
            }

        .login-links {
            text-align: center;
            margin-top: 14px;
            font-size: 14px;
        }

            .login-links a {
                color: #d1d9ff;
                text-decoration: none;
            }

                .login-links a:hover {
                    text-decoration: underline;
                }

        .signup-link {
            text-align: center;
            margin-top: 18px;
            font-size: 15px;
            color: #ddd;
        }

            .signup-link a {
                color: #ffc107;
                font-weight: 700;
                text-decoration: none;
            }

        .error-message {
            color: #ff6b6b;
            margin-bottom: 12px;
            font-size: 14px;
            text-align: center;
            background: rgba(255, 107, 107, 0.1);
            padding: 10px;
            border-radius: 6px;
        }

        .success-message {
            color: #51cf66;
            margin-bottom: 12px;
            font-size: 14px;
            text-align: center;
            background: rgba(81, 207, 102, 0.1);
            padding: 10px;
            border-radius: 6px;
        }

        .otp-header {
            text-align: center;
            margin-bottom: 20px;
        }

            .otp-header i {
                font-size: 48px;
                color: #ffc107;
                margin-bottom: 10px;
            }

            .otp-header h3 {
                color: #fff;
                margin: 10px 0;
                font-size: 20px;
            }

            .otp-header p {
                color: #aaa;
                font-size: 14px;
                margin: 5px 0;
            }

        .otp-input {
            text-align: center;
            font-size: 24px;
            letter-spacing: 8px;
            font-weight: bold;
        }

        .otp-timer {
            text-align: center;
            margin: 15px 0;
            color: #ddd;
            font-size: 14px;
        }

            .otp-timer i {
                margin-right: 5px;
            }

        .resend-btn {
            width: 100%;
            padding: 10px;
            background: transparent;
            color: #ffc107;
            border: 2px solid #ffc107;
            border-radius: 8px;
            cursor: pointer;
            font-size: 14px;
            font-weight: 600;
            transition: 0.3s;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .resend-btn:hover {
                background: rgba(255, 193, 7, 0.1);
                transform: translateY(-1px);
            }

        .back-link {
            text-align: center;
            margin-top: 15px;
        }

            .back-link a {
                color: #aaa;
                text-decoration: none;
                font-size: 14px;
                transition: 0.3s;
            }

                .back-link a:hover {
                    color: #ffc107;
                }

                .back-link a i {
                    margin-right: 5px;
                }
    </style>
</head>

<body>

    <div class="login-wrapper">

        <div class="login-title">
            <img src="/Login?handler=Logo" alt="DASH Logo" class="login-logo" />
        </div>

        <div class="login-card">

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="error-message">
                    <i class="fas fa-exclamation-circle"></i> @Model.ErrorMessage
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="success-message">
                    <i class="fas fa-check-circle"></i> @Model.SuccessMessage
                </div>
            }

            @if (!Model.ShowOTPInput)
            {
                <!-- Regular Login Form -->
                <form method="post">

                    <input asp-for="Email"
                           type="text"
                           class="login-input"
                           placeholder="Email" />

                    <input asp-for="Password"
                           type="password"
                           class="login-input"
                           placeholder="Password" />

                    <button type="submit" class="login-btn">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </button>

                </form>

                <div class="login-links">
                    <a href="#">Forgot Password?</a>
                </div>
            }
            else
            {
                <!-- OTP Verification Form -->
                <div class="otp-header">
                    <i class="fas fa-shield-alt"></i>
                    <h3>Two-Factor Authentication</h3>
                    <p>Enter the 6-digit code sent to <strong>@Model.Email</strong></p>
                </div>

                <form method="post" asp-page-handler="VerifyOTP">
                    <input type="hidden" asp-for="Email" />

                    <input asp-for="OTPCode"
                           type="text"
                           class="login-input otp-input"
                           placeholder="Enter 6-digit code"
                           maxlength="6"
                           pattern="[0-9]{6}"
                           autocomplete="off" />

                    <button type="submit" class="login-btn">
                        <i class="fas fa-check"></i> Verify Code
                    </button>
                </form>

                <div class="otp-timer" id="otpTimer">
                    <i class="fas fa-clock"></i>
                    <span id="timerText">Code expires in: <strong id="countdown">5:00</strong></span>
                </div>

                <form method="post" asp-page-handler="ResendOTP" style="margin-top: 10px;">
                    <button type="submit" class="resend-btn" id="resendBtn">
                        <i class="fas fa-redo"></i> Resend Code
                    </button>
                </form>

                <div class="back-link">
                    <a href="/Login"><i class="fas fa-arrow-left"></i> Back to Login</a>
                </div>
            }

        </div>

        <div class="signup-link">
            Don't have an account?
            <a href="/Signup">Sign up</a>
        </div>

    </div>

    @if (Model.ShowOTPInput && Model.OTPExpiresAt.HasValue)
    {
        <script>
            // Countdown timer
            // Use ISO format for reliable parsing
            const expiresAtStr = '@(Model.OTPExpiresAt.HasValue ? Model.OTPExpiresAt.Value.ToString("yyyy-MM-ddTHH:mm:ss") + "Z" : "")';
            const expiresAt = new Date(expiresAtStr);
            const countdownElement = document.getElementById('countdown');
            const timerElement = document.getElementById('otpTimer');

            function updateCountdown() {
                const now = new Date();
                const diff = expiresAt - now;

                if (diff <= 0) {
                    countdownElement.textContent = '0:00';
                    timerElement.style.color = '#ff6b6b';
                    return;
                }

                const minutes = Math.floor(diff / 60000);
                const seconds = Math.floor((diff % 60000) / 1000);
                countdownElement.textContent = minutes + ':' + (seconds < 10 ? '0' : '') + seconds;

                if (diff < 60000) {
                    timerElement.style.color = '#ffc107';
                }
            }

            updateCountdown();
            setInterval(updateCountdown, 1000);

            // Auto-focus OTP input
            document.querySelector('.otp-input')?.focus();
        </script>
    }

</body>
</html>
