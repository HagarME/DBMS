@page
@using System.Data
@model dashProject.Pages.EditEmployeeModel
@{
    ViewData["Title"] = "Edit Employee";
}

<form method="post">
    <div class="section-box">
        <h4 class="section-title">Personal Information</h4>
        <div class="grid-2">
            <div>
                <label>SSN <span class="required-star">*</span></label>
                <input asp-for="Ssn" type="text" class="input-field readonly-field" readonly />
            </div>
            <div>
                <label>First Name <span class="required-star">*</span></label>
                <input asp-for="Fname" type="text" class="input-field" required />
            </div>
            <div>
                <label>Middle Initial</label>
                <input asp-for="Minit" type="text" class="input-field" />
            </div>
            <div>
                <label>Last Name <span class="required-star">*</span></label>
                <input asp-for="Lname" type="text" class="input-field" required />
            </div>
        </div>

        <div class="grid-2">
            <div>
                <label>Email</label>
                <input asp-for="Email" type="email" class="input-field" />
            </div>
            <div>
                <label>Phone Number</label>
                <input asp-for="PhoneNumber" type="text" class="input-field" />
            </div>
        </div>
    </div>

    <div class="section-box">
        <h4 class="section-title">Employment Details</h4>

        @if (Model.UserRole == "admin")
        {
            <!-- ADMIN VIEW: Can modify everything -->
            <div class="grid-2">
                <div>
                    <label>Role</label>
                    <input asp-for="Role" type="text" class="input-field" />
                </div>
                <div>
                    <label>Department</label>
                    <select asp-for="DeptId" class="select-field">
                        <option value="">-- No Department --</option>
                        @foreach (System.Data.DataRow row in Model.AllDepartments.Rows)
                        {
                            <option value="@row["dept_id"]">
                                @row["dept_id"] - @row["specialization"]
                            </option>
                        }
                    </select>
                </div>
                <div>
                    <label>Supervisor</label>
                    <select asp-for="SuperSsn" class="select-field">
                        <option value="">-- No Supervisor --</option>
                        @foreach (System.Data.DataRow row in Model.AllEmployees.Rows)
                        {
                            if (row["ssn"].ToString() != Model.Ssn)
                            {
                                <option value="@row["ssn"]">
                                    @row["Fname"] @row["Lname"] (@row["ssn"])
                                </option>
                            }
                        }
                    </select>
                </div>
            </div>
        }
        else if (Model.UserRole == "manager")
        {
            <!-- MANAGER VIEW: Role and Department are locked -->
            <div class="grid-2">
                <div>
                    <label>Role <i class="fas fa-lock" style="color: #ffc107;"></i></label>
                    <input type="text" value="@Model.Role" class="input-field readonly-field" readonly />
                    <input asp-for="Role" type="hidden" />
                    <small style="color: #666; display: block; margin-top: 5px;">
                        <i class="fas fa-info-circle"></i> Role cannot be changed by managers
                    </small>
                </div>
                <div>
                    <label>Department <i class="fas fa-lock" style="color: #ffc107;"></i></label>
                    @{
                        var deptName = Model.AllDepartments.AsEnumerable()
                        .FirstOrDefault(r => r["dept_id"].ToString() == Model.DeptId.ToString())?["specialization"]?.ToString() ?? "Unknown";
                    }
                    <input type="text" value="@deptName" class="input-field readonly-field" readonly />
                    <input asp-for="DeptId" type="hidden" />
                    <small style="color: #666; display: block; margin-top: 5px;">
                        <i class="fas fa-info-circle"></i> Department cannot be changed by managers
                    </small>
                </div>
                <div>
                    <label>Supervisor</label>
                    <select asp-for="SuperSsn" class="select-field">
                        <option value="">-- No Supervisor --</option>
                        @foreach (System.Data.DataRow row in Model.AllEmployees.Rows)
                        {
                            if (row["ssn"].ToString() != Model.Ssn)
                            {
                                <option value="@row["ssn"]">
                                    @row["Fname"] @row["Lname"] (@row["ssn"])
                                </option>
                            }
                        }
                    </select>
                </div>
            </div>
        }

        <div class="button-group">
            <button type="submit" class="primary-btn">
                <i class="fas fa-save"></i> Save Changes
            </button>
            <a asp-page="/Employees" class="secondary-btn">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </div>
</form>